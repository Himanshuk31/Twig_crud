{% include 'layout/header.twig' %}

<h1>Edit User Details</h1>
<form method="post" autocomplete="off">
    <input type="hidden" name="id" value="{{ user.id }}">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="{{ user.name }}" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="text" name="password" id="password" class="form-control" value="{{ user.password }}" required>
    </div>
    <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="text" name="phone" id="phone" class="form-control" value="{{ user.phone_number }}" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

{% include 'layout/footer.twig' %}
